{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true,
    "noImplicitAny": true,
    // "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/constants": ["./constants"],
      "@/components/*": ["./components/*"],
      "@/utils": ["./utils"],
      "@/styles/*": ["./styles/*"]
    },
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
  },
  "include": [
    "next-env.d.ts",
    "types.ts",
    "types.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.setup.js",
    "jest.config.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
